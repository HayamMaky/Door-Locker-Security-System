#include"keypad.h"
#include"lcd.h"
/**********************************************************/
#define PASSWORD_LENGTH 5
#define MAX_ATTEMPTS 3
#define UNLOCK_DURATION 15  /* Seconds for motor rotation*/
#define BUZZER_DURATION 60  /* 1 minute in seconds*/

/**********************************************************/

void  Create_a_System_Password(void);
int main()
{

	LCD_init();


	while(1)
	{
		while(1)
		{

		}
	}
}
void  Create_a_System_Password(void)
{
	char* str1 = "Plz enter Pass:";
	char pass[ PASSWORD_LENGTH + 1 ];
	char count = 0;
	char ch ='*';
	LCD_moveCursor(0,0);
	LCD_displayString(str1);
	for(count = 0; count < 5; count++)
	{
		pass[count]=KEYPAD_getPressedKey();
		LCD_moveCursor(1,count);
		LCD_displayCharacter(ch);
	}
}
